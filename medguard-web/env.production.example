# Production Environment Variables for MedGuard SA
# Copy this file to .env.production and fill in your actual values

# ============================================================================
# GOOGLE CLOUD VISION API
# ============================================================================
VITE_GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key_here
VITE_GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id_here
VITE_GOOGLE_CLOUD_REGION=us-central1

# ============================================================================
# AZURE COMPUTER VISION API (Backup OCR)
# ============================================================================
VITE_AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
VITE_AZURE_COMPUTER_VISION_API_KEY=your_azure_computer_vision_api_key_here
VITE_AZURE_REGION=eastus

# ============================================================================
# PERPLEXITY API
# ============================================================================
VITE_PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================================================
# STORAGE AND ENCRYPTION
# ============================================================================
VITE_STORAGE_ENCRYPTION_KEY=your_32_character_encryption_key_here
VITE_STORAGE_BUCKET_NAME=medguard-prescriptions-prod

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================
VITE_MONITORING_ENDPOINT=https://monitoring.medguard-sa.com
VITE_ALERT_WEBHOOK_URL=https://your-alert-webhook-url.com

# ============================================================================
# DATABASE CONNECTIONS
# ============================================================================
VITE_MEDICATION_DB_URL=postgresql://user:password@host:port/database
VITE_DRUGBANK_API_KEY=your_drugbank_api_key_here
VITE_SAHPRA_API_KEY=your_sahpra_api_key_here

# ============================================================================
# PHARMACY API INTEGRATIONS
# ============================================================================
VITE_PHARMACY_API_KEY=your_pharmacy_council_api_key_here
VITE_GAUTENG_PHARMACY_API_KEY=your_gauteng_pharmacy_api_key_here
VITE_WC_PHARMACY_API_KEY=your_western_cape_pharmacy_api_key_here
VITE_KZN_PHARMACY_API_KEY=your_kzn_pharmacy_api_key_here

# ============================================================================
# BACKUP AND DISASTER RECOVERY
# ============================================================================
VITE_BACKUP_ENDPOINT=https://backup.medguard-sa.com
VITE_DISASTER_RECOVERY_ENDPOINT=https://dr.medguard-sa.com

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=production
VITE_APP_ENV=production
VITE_API_BASE_URL=https://api.medguard-sa.com
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true 