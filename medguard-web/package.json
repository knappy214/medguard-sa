{
  "name": "medguard-web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:prescription": "vitest run src/tests/PrescriptionWorkflow.test.ts src/tests/OCRService.test.ts src/tests/MedicationParser.test.ts",
    "test:prescription:watch": "vitest src/tests/PrescriptionWorkflow.test.ts src/tests/OCRService.test.ts src/tests/MedicationParser.test.ts",
    "test:prescription:coverage": "vitest run --coverage src/tests/PrescriptionWorkflow.test.ts src/tests/OCRService.test.ts src/tests/MedicationParser.test.ts",
    "test:backend": "cd ../medguard_backend && python manage.py test medications.tests.test_prescription_workflow --verbosity=2",
    "test:backend:coverage": "cd ../medguard_backend && coverage run --source='.' manage.py test medications.tests.test_prescription_workflow && coverage report",
    "test:all": "npm run test:prescription && npm run test:backend",
    "test:all:coverage": "npm run test:prescription:coverage && npm run test:backend:coverage",
    "test:runner": "tsx src/tests/run_prescription_tests.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@google-cloud/vision": "^4.0.2",
    "@azure/cognitiveservices-computervision": "^8.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "axios": "^1.11.0",
    "canvas": "^3.1.2",
    "crypto-js": "^4.2.0",
    "daisyui": "^5.0.50",
    "pinia": "^3.0.3",
    "tailwindcss": "^4.1.11",
    "tesseract.js": "^6.0.1",
    "vue": "^3.5.17",
    "vue-i18n": "^11.1.11",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@tailwindcss/postcss": "^4.1.11",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.32",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.10"
  }
}
